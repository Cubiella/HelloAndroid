<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/udacity"
        android:id="@+id/udacity"
        android:padding="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Future is now"
        android:textAllCaps="true"
        android:layout_below="@+id/udacity"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:id="@+id/futureisnow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:id="@+id/address"
        android:layout_below="@id/futureisnow"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:fontFamily="casual"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addressTow"
        android:id="@+id/addressTwo"
        android:layout_below="@id/address"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:fontFamily="casual"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/postcode"
        android:id="@+id/postcode"
        android:layout_below="@id/addressTwo"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:fontFamily="casual"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/phone"
        android:layout_below="@id/postcode"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:fontFamily="casual"
        android:autoLink="phone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/url"
        android:layout_below="@id/phone"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:fontFamily="casual"
        android:autoLink="web"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/udacitylogo"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</RelativeLayout>
